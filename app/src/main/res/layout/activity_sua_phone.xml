<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SuaPhone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa sản phẩm"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/edtTenSpUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập tên"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtBrandSpUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập thương hiệu"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtDesSpUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập mô tả"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtGiaSpUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập giá"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtImgSpUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập ảnh"
        android:inputType="text" />

    <Button
        android:id="@+id/btnSuaSpUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa" />

</LinearLayout>